<div class="container">
        <form class="form-horizontal">
                <%= search_form_for @search , :html => {:style=> 'form-horizontal;'} do |f| %>
                        <%= hidden_field_tag '[category_id_eq_any][]' %>
                        
                        <div class="form-group">
                        <div class="col-xs-12 col-sm-4 col-md-2"><%= f.label :height_ltep, "高さ" , class:'control-label'%></div>
                        <div class ="form-inline">
                                <%= f.number_field :height_gteq, min:0, step:5, class:'form-control'%><span style="margin: 0 5px;">cmから</span>
                                <%= f.number_field :height_lteq, min:0, step:5, class:'form-control'%><span style="margin: 0 5px;">cmまで</span>
                        </div>
                </div>
                        <div class="form-group">
                        <div class="col-xs-12 col-sm-4 col-md-2"><%= f.label :width_ltep, "幅　"  , class:'control-label'%></div>
                        <div class ="form-inline">
                                <%= f.number_field :width_gteq, min:0, step:5, class:'form-control'%><span style="margin: 0 5px;">cmから</span>
                                <%= f.number_field :width_lteq, min:0, step:5, class:'form-control'%><span style="margin: 0 5px;">cmまで</span>
                        </div>
                </div>
                        <div class="form-group">
                        <div class="col-xs-12 col-sm-4 col-md-2"><%= f.label :length_ltep, "奥行"  , class:'control-label'%></div>
                        <div class ="form-inline">
                                <%= f.number_field :length_gteq, min:0, step:5, class:'form-control'%><span style="margin: 0 5px;">cmから</span>
                                <%= f.number_field :length_lteq, min:0, step:5, class:'form-control'%><span style="margin: 0 5px;">cmまで</span>
                        </div>
                </div>
                        <div class="form-group item-types">
                        <div class="col-xs-12 col-sm-4 col-md-2"><%= f.label:category_id,'棚系' , class:'control-label'%></div>
                        <div class="form-inline col-xs-12 col-sm-2 col-md-10">
                                <label class="checkbox-inline"><%= check_box_tag "q[category_id_eq_any][]", "392219011"%>収納家具</label>
                                <label class="checkbox-inline"><%= check_box_tag "q[category_id_eq_any][]", "392220011" %>書棚</label>
                                <label class="checkbox-inline"><%= check_box_tag "q[category_id_eq_any][]", "392270011" %>CD・DVDラック</label>
                                <label class="checkbox-inline"><%= check_box_tag "q[category_id_eq_any][]", "16428161" %>オープンシェルフ・ラックオープンシェルフ・ラック</label>
                        </div>
                </div>
                        <div class="form-group item-types">
                        <div class="col-xs-12 col-sm-4 col-md-2"><%= f.label:category_id,'衣類収納' , class:'control-label'%></div>
                                <div class="form-inline col-xs-12 col-sm-2 col-md-10">
                                <label class="checkbox-inline"><%= check_box_tag "q[category_id_eq_any][]", "16416231"  %>ハンガーラック</label>
                                <label class="checkbox-inline"><%= check_box_tag "q[category_id_eq_any][]", "16428171"  %>クローゼット・ワードローブ</label>
                                <label class="checkbox-inline"><%= check_box_tag "q[category_id_eq_any][]", "16428201"  %>チェスト</label>
                                <label class="checkbox-inline"><%= check_box_tag "q[category_id_eq_any][]", "16416171"  %>サイドワゴン</label>
                        </div>
                </div>

                        <div class="form-group col-xs-12 col-sm-12 col-md-11">
                                <%= f.submit "検索" ,class:"btn btn-success" ,onclick:"from_val()" %>
                        </div>
                <% end %>
        </div>
</div>